{{> header }}
{{> left }}
<!-- Main Content -->
		<div class="page-wrapper">	<!-- select2 CSS -->
			 	<div class="container-fluid">
				
				<!-- Title -->
				<div class="row heading-bg">
					<div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
					  <!-- <h5 class="txt-dark">Login Users</h5> -->
					</div>
					<!-- Breadcrumb -->
					<div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
					  <ol class="breadcrumb">
						<li><a href="/">Dashboard</a></li>
						<li><a href="/category"><span>Category</span></a></li>
						<li class="active"><span>List</span></li>
					  </ol>
					</div>
					<!-- /Breadcrumb -->
				</div>
				<!-- /Title -->
				{{#if errors}} {{#each errors}}
						<div class="alert alert-danger" id="errmsg">{{msg}}</div>
					{{/each}} {{/if}} 
					
					{{#if success_msg}}
						<div class="alert alert-success" id="sucmsg">{{success_msg}}</div>
					{{/if}} 
					{{#if error_msg}}
						<div class="alert alert-danger" id="sucmsg">{{error_msg}}</div>
					{{/if}}
				<!-- Row -->
				<div class="row">
					<div class="col-sm-12">
						<div class="panel panel-default card-view">
							<div class="panel-heading">
								<div class="pull-left">
									<h6 class="panel-title txt-dark">Category</h6>
								</div>
								<div class="right" style="float:right">
									<button class="btn btn-info btn-anim" id='viewbtn' style="display: none" onclick="$('#adminbtn').show();$('#subadminbtn').show();$('#viewbtn').hide();$('#admin_add').hide();$('#listing').show();"><i class="fa fa-eye"></i><span class="btn-text">View List</span></button>
									<button class="btn btn-warning btn-anim"  id='subadminbtn' onclick="$('#listing').hide();$('#admin_add').show();$('#adminbtn').hide(); $('#viewbtn').show(); $('#subadminbtn').hide();"><i class="fa fa-plus"></i><span class="btn-text">Add Category</span></button>
								</div>
								<div class="clearfix"></div>
							</div>
							<div class="clearfix"></div>
								<div class="row searchfrm">
									<div class="col-md-12">
																		</div>
								</div>
																					<div class="panel-wrapper collapse in">
								<div class="panel-body">
									<div class="contact-list">
										<div class="row">
									<aside class="col-lg-10 col-md-4 pr-0">	
									<div class="table-wrap" id="customer_list">
										<div class="panel pl-10">
									
						<!-- Row -->
					<div class="panel-body">
						<div class="form-wrap">
							<h6 class="txt-dark capitalize-font"><i class="zmdi zmdi-account mr-10"></i>Category's Info</h6>
							<hr class="light-grey-hr"/>
							<form method="post"  data-toggle="validator" role="form" action="/category/updatecategory" enctype="multipart/form-data" >
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<label class="control-label mb-10" for="exampleInputEmail_2">Category Name</label>
											<div class="input-group">
												<div class="input-group-addon"><i class="icon-user"></i></div>
												<input type="text" class="form-control" name="name" id="name" placeholder="Category Name" required value="{{data.data.name}}">
												<input type="hidden" class="form-control" name="_id" id="_id" value="{{data.data._id}}">

											</div>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label class="control-label mb-10" for="exampleInputEmail_2">Is Featured</label>
											<div class="input-group">
												<div class="input-group-addon"><i class="glyphicon glyphicon-user"></i></div>
												<select class="form-control" name="is_featured" id="is_featured">
                                                    <option value="1"  {{#if_equal data.data.is_featured 1 }} selected {{/if_equal}} >Yes</option>
                                                    <option value="0"  {{#if_equal data.data.is_featured 0 }} selected {{/if_equal}}>No</option>
                                                </select>
                                                </select>
											</div>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<label class="control-label mb-10" for="exampleInputEmail_2">URL</label>
											<div class="input-group">
												<div class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></div>
												<input type="url" class="form-control" name="url" id="url" placeholder="URL" value="{{data.data.url}}">
											</div>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label class="control-label mb-10" for="exampleInputEmail_2">Meta Title</label>
											<div class="input-group">
												<div class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></div>
												<input type="text" class="form-control" name="meta_title" id="meta_title" placeholder="Meta Title" value="{{data.data.meta_title}}" >
											</div>
										</div>
									</div>
								</div>
                                <div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<label class="control-label mb-10" for="exampleInputEmail_2">Meta Keyword</label>
											<div class="input-group">
												<div class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></div>
												<input type="text" class="form-control" name="meta_keyword" id="meta_keyword" placeholder="Meta Keyword"  value="{{data.data.meta_keyword}}">
											</div>
										</div>
									</div>
                                    <div class="col-md-6">
										<div class="form-group">
											<label class="control-label mb-10" for="exampleInputEmail_2">Meta Description</label>
											<div class="input-group">
												<div class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></div>
												<input type="text" class="form-control" name="meta_description" id="meta_description" placeholder="Meta Description"  value="{{data.data.meta_description}}">
											</div>
										</div>
									</div>
								</div>
								<div class="row">
                                    <div class="col-md-6">
										<div class="form-group">
											<label class="control-label mb-10" for="exampleInputEmail_2">Image</label>
											<div class="input-group">
												<div class="input-group-addon"><i class="glyphicon glyphicon-picture"></i></div>
												<input type="file" class="form-control" name="image" id="image" >
											</div>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label class="control-label mb-10" for="exampleInputEmail_2">Status</label>
											<div class="input-group">
												<div class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></div>
												<select name="status" id="status" class="form-control">
													<option value="Active"{{#if_equal data.data.status 'Active' }} selected {{/if_equal}} >Active</option>
													<option value="Inactive"{{#if_equal data.data.status 'Inactive' }} selected {{/if_equal}} >Inactive</option>
												</select>
											</div>
										</div>
									</div>
									 
								</div>
								<div class="form-group text-center">
									<button type="submit" class="btn btn-success  btn-rounded">Save</button>
								</div>
							</form>
						</div>
				</div>
			</div>

			<!-- /Row --> 
				</div>
			</div>
		</div>	
	</div>
</div>
<!-- /Row -->
</aside>
</div>
</div>

        {{> footer }}
