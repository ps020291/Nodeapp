<header class="sp-header">
    <div class="sp-logo-wrap pull-left">
        <a href="/">
            {{!--
            <img class="brand-img mr-10" src="../img/logo.png" alt="brand" /> --}}
            <span class="brand-text">NodeApp Jenkis Pushpendra</span>
        </a>
    </div>
    <div class="form-group mb-0 pull-right">
        <span class="inline-block pr-10">Don't have an account?</span>
        <a class="inline-block btn btn-success  btn-rounded btn-outline" href="/register">Sign Up</a>
    </div>
    <div class="clearfix"></div>
</header>
<div class="page-wrapper pa-0 ma-0 auth-page">
    <div class="container-fluid">
        <!-- Row -->
        <div class="table-struct full-width full-height">
            <div class="table-cell vertical-align-middle auth-form-wrap">
                <div class="auth-form  ml-auto mr-auto no-float">
                    <div class="row">


                        <div class="col-sm-12 col-xs-12">
                            <div class="mb-30">
                                <h3 class="text-center txt-dark mb-10">Sign in to NodeApp Admin</h3>
                                <h6 class="text-center nonecase-font txt-grey">Enter your details below</h6>
                            </div>
                            {{#if errors_msg}}
                            <div class="alert alert-danger" id="errmsg">{{error_msg}}</div>
                            {{/if}} {{#if success_msg}}
                            <div class="alert alert-success" id="sucmsg">{{success_msg}}</div>
                            {{/if}} 
                            {{#if error}}
                            <div class="alert alert-danger" id="sucmsg">{{error}}</div>
                            {{/if}}
                            <div class="form-wrap">
                                <form method="post" action="/login/authenticate" data-toggle="validator" >
                                    <div class="form-group">
                                        <label class="control-label mb-10" for="exampleInputEmail_2">Email address</label>
                                        <div class="input-group" id="email_control">
                                            <div class="input-group-addon">
                                                <i class="icon-user"></i>
                                            </div>
                                            <input type="email" class="form-control" id="email" name="username" placeholder="Enter Email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label mb-10" for="exampleInputpwd_2">Password</label>
                                        <div class="input-group" id="password_control">
                                            <div class="input-group-addon">
                                                <i class="icon-lock"></i>
                                            </div>
                                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password">
                                        </div>
                                    </div>
                                    <div class="form-group text-center">
                                        <button type="submit" class="btn btn-success  btn-rounded">sign in</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
